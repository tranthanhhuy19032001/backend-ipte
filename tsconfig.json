{
    "compilerOptions": {
        // other options
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@services/*": ["modules/services/*"],
            "@controllers/*": ["modules/controllers/*"],
            "@dao/*": ["modules/dao/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["modules/models/*"],
            "@middlewares/*": ["middlewares/*"],
            "@config/*": ["config/*"],
            "@enums/*": ["enums/*"]
        }
    }
}
