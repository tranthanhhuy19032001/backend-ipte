{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": ["ES2021"],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"],
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@services/*": ["modules/services/*"],
            "@controllers/*": ["modules/controllers/*"],
            "@dao/*": ["modules/dao/*"],
            "@routes/*": ["routes/*"],
            "@models/*": ["modules/models/*"],
            "@middlewares/*": ["middlewares/*"],
            "@config/*": ["config/*"],
            "@enums/*": ["enums/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"]
    }
}
