{
    "name": "backend-ipte",
    "version": "1.0.0",
    "description": "Backend for IPTE website using Node.js, Express, TypeScript, PostgreSQL, Prisma",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/server.ts",
        "build": "tsc",
        "start": "node -r tsconfig-paths/register dist/server.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "typecheck": "tsc --noEmit",
        "postinstall": "prisma generate"
    },
    "dependencies": {
        "@prisma/client": "^5.18.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "jsonwebtoken": "^9.0.2",
        "slugify": "^1.6.6"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.19.13",
        "prisma": "^5.18.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    },
    "author": "Huy",
    "license": "MIT",
    "engines": {
        "node": ">=18 <23"
    }
}
